@model PieShopCore.ViewModels.HomeViewModel

<h2>@Model.Title</h2>

@foreach (var pie in Model.Pies)
{
       <div class="col-sm-4 col-lg-4 col-md-4">
           <img src="@pie.ImageThumbnailUrl" alt="Pattern" />
           <div class="caption">
               <h3 class="pull-right">@pie.Price.ToString("c")</h3>
               <h3>@pie.Name</h3>
               <p>@pie.ShortDescription</p>
           </div>
       </div>

}

